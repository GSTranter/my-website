---
import Tags from "../components/Tags.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout>
    <h1>{frontmatter.title}</h1>
    <p><em>{frontmatter.description}</em></p>

    <p>Written by {frontmatter.author}, published {frontmatter.pubDate.toLocaleDateString()}</p>

    <Tags tags={frontmatter.tags} />

    <img class="header-image" src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

    <slot />
</BaseLayout>


<style>
    .header-image {
        margin-top: 1rem;
    }
</style>