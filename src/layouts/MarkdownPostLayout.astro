---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout>
    <h1>{frontmatter.title}</h1>
    <p><em>{frontmatter.description}</em></p>

    <p>Written by {frontmatter.author}, published {frontmatter.pubDate.toString().slice(0,10)}</p>

    <ul class="tag-list">
        {
            frontmatter.tags && frontmatter.tags.map((tag: string) => <li class="tag">#{tag}</li>)
        }
    </ul>

    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

    <slot />
</BaseLayout>


<style>
    .tag-list {
        list-style: none;
        padding: 0;
        display: flex;
        gap: 1rem;
    }

    .tag {
        border-color: grey;
        border-width: 0.1rem;
        border-style: solid;
        padding: 0.5rem 1rem 0.5rem 1rem;
        border-radius: 0.5rem;
    }
</style>