---

const { tags } = Astro.props;

---

<div class="tags">
    {tags.map((tag: string) => (
        <div class="tag"><a href={`/tags/${tag}`}>{tag}</a></div>
    ))}
</div>

<style>
    a {
        color: #00539F;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem 1rem;
    }

    .tag {
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;
    }
</style>