---
import DocumentText from "./icons/DocumentText.astro";
import Home from "./icons/Home.astro";

const currentPath = Astro.url.pathname;

---

<div class="nav-links">
    <a class={currentPath === '/' ? 'active' : ''} href="/"><Home class="icon" />Home</a>
    <a class={currentPath === '/notes' ? 'active' : ''} href="/notes"><DocumentText class="icon"/>Notes</a>
</div>

<style>
    .nav-links {
        margin-bottom: 0.5rem;
        margin-top: 0.5rem;
        display: flex;
        justify-content: space-around;
    }

    .nav-links a {
        color: var(--body);
        font-size: 1.25rem;
        text-decoration: none;
        display: flex;
        gap: 0.25rem;
        padding: 0.25rem 0.5rem;
        border-radius: var(--rounded);
        align-items: center;

        transition: all .25s ease-in-out;


        &.active {
            color: var(--highlight)
        }

        &:hover {
            color: var(--header)
        }
    }

    .nav-links .icon {
        width: 1.25rem;
        margin-top: -0.1rem;
    }

</style>